{
  "name": "react-tailwind-uikit",
  "version": "0.1.2",
  "author": "Gaurav Verma",
  "description": "React-tailwind-uikit is a reusable component library that helps to build UIs faster for React Js , Next js Web Projects and Supports TypeScript. The goal is to make building durable UIs more productive and satisfying.",
  "homepage": "https://github.com/gauravverma029/react-tailwind-uikit",
  "bugs": {
    "url": "https://github.com/gauravverma029/react-tailwind-uikit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gauravverma029/react-tailwind-uikit"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist/*"
  ],
  "license": "MIT",
  "typings": "typings/index.d.ts",
  "dependencies": {},
  "storybook-deployer": {
    "gitUsername": "gauravverma029",
    "gitEmail": "gauravverma029@gmail.com",
    "commitMessage": "Deploy Storybook to GitHub Pages"
  },
  "scripts": {
    "start": "rollup -c -w",
    "build": "rollup -c",
    "build:tailwind": "npx tailwindcss build src/tailwind.css -o .storybook/styles.css -c tailwind.config.js",
    "storybook": "NODE_ENV=development start-storybook -p 6006",
    "build-storybook": "NODE_ENV=production yarn clean-storybook-static && yarn build:tailwind && build-storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "clean-dist": "shx rm -rf dist",
    "clean-storybook-static": "shx rm -rf stsorybook-static",
    "prepublishOnly": "npm run clean-dist && yarn build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
